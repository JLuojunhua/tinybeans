<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.UserMapper" >
    <!--映射-->
    <resultMap type="entity.User" id="UserResult">
        <id column = "id" property = "id"/>
        <result column = "isRoot" property = "isRoot"/>
        <result column = "icon" property = "icon"/>
        <result column = "userPassword" property = "userPassword"/>
        <result column = "userSex" property = "userSex"/>
        <result column = "userPhoneNum" property = "userPhoneNum"/>
        <result column = "userLikeCategories" property = "userLikeCategories"/>
    </resultMap>

    <!--接口实现-->
    <insert id="add" parameterType="User">
        INSERT INTO USER (is_root,icon,user_password,user_sex,user_phone_num,user_like_categories)
        value (#{isRoot},#{icon},#{userPassword},#{userSex},#{userPhoneNum},#{userLikeCategories})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM USER WHERE id = #{id}
    </delete>

    <update id="update" parameterType="User">
        update USER set
        is_root = #{isRoot},
        icon = #{icon},
        user_password = #{userPassword},
        user_sex = #{userSex},
        user_phone_num = #{userPhoneNum},
        user_like_categories=#{userLikeCategories}
        where id = #{id}
    </update>

    <select id="findById" parameterType="java.lang.Integer" resultType="User">
        SELECT * FROM USER where id = #{id}
    </select>

    <select id="findAll" resultMap="UserResult">
        select * from USER
    </select>

    <update id="updatePhoto" parameterType="User">
        update user SET
        icon = #{icon}
        where id = #{id}
    </update>

    <select id="findByUserName" resultMap="UserResult">
        select * from USER where user_name = #{userName}
    </select>
    
    <select id="isUser" parameterType="java.lang.String">
        select * from user where user_name = #{userName} and password = #{password}
    </select>

    <select id="isRoot" parameterType="java.lang.String">
        select is_root from user where user_name = #{userName}
    </select>
</mapper>